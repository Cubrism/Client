<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.widget.Button
        android:id="@+id/studyStatus"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_rounded_corner_lb4"
        android:text="모집중"
        android:textSize="18dp"
        android:fontFamily="@font/kopubdotumbold"
        android:textColor="@color/blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.widget.Button
        android:id="@+id/studyStatus2"
        android:layout_width="70dp"
        android:layout_height="33dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/edittext_rounded_corner_search"
        android:text="#널널함"
        android:textSize="15dp"
        android:textColor="@color/blue"
        android:fontFamily="@font/kopubdotumbold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtStudyTitle" />

    <android.widget.Button
        android:id="@+id/studyStatus3"
        android:layout_width="70dp"
        android:layout_height="33dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/edittext_rounded_corner_search"
        android:text="#열공"
        android:textSize="15dp"
        android:textColor="@color/blue"
        android:fontFamily="@font/kopubdotumbold"
        app:layout_constraintStart_toEndOf="@+id/studyStatus2"
        app:layout_constraintTop_toBottomOf="@+id/txtStudyTitle" />

    <TextView
        android:id="@+id/txtStudyTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/kopubdotumbold"
        android:textColor="#222222"
        android:text="같이 공부하실 분 구합니다!~"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/studyStatus" />

    <TextView
        android:id="@+id/textView41"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="16dp"
        android:text="1 / 4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/txtStudyInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="스터디 소개글입니다.\n스터디 소개글입니다."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/studyStatus2" />
</androidx.constraintlayout.widget.ConstraintLayout>