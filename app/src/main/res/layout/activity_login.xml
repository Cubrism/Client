<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageButton
        android:id="@+id/closeBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="20dp"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/close" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            app:srcCompat="@drawable/logo" />

        <TextView
            android:id="@+id/loginTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/koulen"
            android:gravity="center"
            android:text="CUBRISM"
            android:textColor="@color/blue"
            android:textSize="27sp" />

        <EditText
            android:id="@+id/loginEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/edittext_rounded_corner"
            android:drawableLeft="@drawable/email"
            android:drawablePadding="6dp"
            android:ems="10"
            android:fontFamily="@font/kotra"
            android:hint="Email address"
            android:inputType="text"
            android:letterSpacing="0.1"
            android:paddingLeft="20dp"
            android:paddingRight="15dp"
            android:textColor="@color/blue"
            android:textColorHint="@color/blue"
            android:textSize="13sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/loginPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/edittext_rounded_corner"
            android:drawableLeft="@drawable/lock"
            android:drawablePadding="6dp"
            android:ems="10"
            android:fontFamily="@font/kotra"
            android:hint="Password"
            android:inputType="textPassword"
            android:letterSpacing="0.1"
            android:paddingLeft="16dp"
            android:paddingRight="15dp"
            android:textColor="@color/blue"
            android:textColorHint="@color/blue"
            android:textSize="13sp"
            android:textStyle="bold" />

        <android.widget.Button
            android:id="@+id/loginButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/button_rounded_corner"
            android:fontFamily="@font/koulen"
            android:text="LOGIN"
            android:textColor="@color/white"
            android:textSize="23sp" />


        <TextView
            android:id="@+id/signUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/kopubdotumbold"
            android:gravity="center"
            android:text="소셜 계정으로 로그인:"
            android:textColor="#939393"
            android:textSize="13dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">


            <ImageView
                android:id="@+id/googleSymbol"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginStart="100dp"
                android:layout_marginEnd="15dp"
                app:srcCompat="@drawable/googlesymbol" />

            <ImageView
                android:id="@+id/kakaoSymbol"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginEnd="50dp"
                app:srcCompat="@drawable/kakaosymbol" />
        </LinearLayout>

        <TextView
            android:id="@+id/signUp2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/kotra"
            android:gravity="center"
            android:letterSpacing="0.1"
            android:text="SIGN UP"
            android:textColor="#F17272"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/forgotEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/kotra"
            android:gravity="center"
            android:text="Did you forget your email?"
            android:textColor="#B2B2B2"
            android:textSize="12sp"
            android:textStyle="bold|italic" />

    </LinearLayout>

</LinearLayout>