<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/backBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:foreground="@android:color/transparent"
        android:padding="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/arrow_left" />

    <TextView
        android:id="@+id/txtBackBtn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="3dp"
        android:fontFamily="@font/godom"
        android:gravity="center_vertical"
        android:text="관심 자격증 관리"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/backBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/backBtn"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/noCert"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/layout_rounded_corner_withdash_blue"
        android:fontFamily="@font/kopubdotumbold"
        android:gravity="center"
        android:text="관심 자격증이 등록되지 않았습니다."
        android:textColor="#8EABF8"
        android:textSize="16dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtBackBtn" />

    <LinearLayout
        android:id="@+id/layout_Cert1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtBackBtn">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:background="@drawable/button_rounded_corner_blue5"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cert1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="18dp"
                android:paddingLeft="1dp"
                android:paddingTop="2dp"
                android:background="@drawable/button_rounded_corner_blue4"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/white"
                android:fontFamily="@font/godom"
                android:text="1" />

            <TextView
                android:id="@+id/txtCategory1"
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:layout_marginLeft="12dp"
                android:gravity="center_vertical"
                android:fontFamily="@font/godom"
                android:textSize="17dp"
                android:textColor="@color/blue"
                android:text="정보처리기사" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnDelete1"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:background="@drawable/button_rounded_corner_blue6"
            android:layout_weight="0.2"
            android:textSize="17dp"
            android:textColor="@color/blue"
            android:fontFamily="@font/kopubdotumbold"
            android:text="삭제" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_Cert2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_Cert1">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.7"
        android:background="@drawable/button_rounded_corner_blue5"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cert2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="18dp"

            android:paddingLeft="1dp"
            android:paddingTop="2dp"
            android:background="@drawable/button_rounded_corner_blue4"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/white"
            android:fontFamily="@font/godom"
            android:text="2" />

        <TextView
            android:id="@+id/txtCategory2"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:layout_marginLeft="12dp"
            android:gravity="center_vertical"
            android:fontFamily="@font/godom"
            android:textSize="17dp"
            android:textColor="@color/blue"
            android:text="한식조리기능사" />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnDelete2"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:background="@drawable/button_rounded_corner_blue6"
        android:layout_weight="0.2"
        android:textSize="17dp"
        android:textColor="@color/blue"
        android:fontFamily="@font/kopubdotumbold"
        android:text="삭제" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_Cert3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_Cert2">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:background="@drawable/button_rounded_corner_blue5"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cert3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="18dp"
                android:paddingLeft="1dp"
                android:paddingTop="2dp"
                android:background="@drawable/button_rounded_corner_blue4"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/white"
                android:fontFamily="@font/godom"
                android:text="3" />

            <TextView
                android:id="@+id/txtCategory3"
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:layout_marginLeft="12dp"
                android:gravity="center_vertical"
                android:fontFamily="@font/godom"
                android:textSize="17dp"
                android:textColor="@color/blue"
                android:text="직업상담사1급" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnDelete3"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:background="@drawable/button_rounded_corner_blue6"
            android:layout_weight="0.2"
            android:textSize="17dp"
            android:textColor="@color/blue"
            android:fontFamily="@font/kopubdotumbold"
            android:text="삭제" />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnApply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/button_rounded_corner_red"
        android:text="설정하기"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>