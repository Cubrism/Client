<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/layout_Cert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:background="@drawable/button_rounded_corner_blue5"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/certCount"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="18dp"
                android:paddingLeft="1dp"
                android:paddingTop="2dp"
                android:background="@drawable/button_rounded_corner_blue4"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/white"
                android:fontFamily="@font/godom"
                android:text="1" />

            <TextView
                android:id="@+id/txtCategory"
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:layout_marginLeft="12dp"
                android:gravity="center_vertical"
                android:fontFamily="@font/godom"
                android:textSize="17dp"
                android:textColor="@color/blue"
                android:text="정보처리기사" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnDelete"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:background="@drawable/button_rounded_corner_blue6"
            android:layout_weight="0.2"
            android:textSize="17dp"
            android:textColor="@color/blue"
            android:fontFamily="@font/kopubdotumbold"
            android:text="삭제" />

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>