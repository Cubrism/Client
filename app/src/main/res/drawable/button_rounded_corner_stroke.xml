<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background shape -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#A9BFF9" />
            <corners android:radius="5dp" /> <!-- 둥근 테두리 -->
        </shape>
    </item>

    <!-- First stroke -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- 첫 번째 stroke의 색은 배경과 동일하게 -->
            <stroke
                android:width="1dp"
                android:color="#A9BFF9" />
            <corners android:radius="5dp" /> <!-- 둥근 테두리 적용 -->
        </shape>
    </item>

    <!-- Second stroke -->
    <item android:left="2dp" android:top="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#A9BFF9" /> <!-- 두 번째 stroke의 색은 배경과 동일하게 -->
            <stroke
                android:width="3dp"
                android:color="@color/white" />
            <corners android:radius="5dp" /> <!-- 둥근 테두리 적용 -->
        </shape>
    </item>

</layer-list>
