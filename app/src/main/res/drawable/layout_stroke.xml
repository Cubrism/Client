<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 상단 테두리 -->
    <item
        android:top="1dp"
        android:left="-2dp"
        android:right="-2dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="#D6F3FF" />
        </shape>
    </item>
    <!-- 하단 테두리 -->
    <item
        android:bottom="1dp"
        android:left="-2dp"
        android:right="-2dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="#D6F3FF" />
        </shape>
    </item>
</layer-list>
