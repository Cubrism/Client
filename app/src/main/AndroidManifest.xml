<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher_cubrism"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_cubrism_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Capstone24_1"
        android:usesCleartextTraffic="true"
        tools:targetApi="31" >
        <activity
            android:name="com.kakao.sdk.auth.AuthCodeHandlerActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <!-- Redirect URI: "kakao${NATIVE_APP_KEY}://oauth" -->
                <data android:host="oauth"
                    android:scheme="kakao${KAKAO_NATIVE_APP_KEY}" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.MainActivity"
            android:windowSoftInputMode="adjustPan"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.SplashActivity"
            android:exported="true" />
        <activity
            android:name=".view.SignInActivity"
            android:exported="true" />
        <activity
            android:name=".view.SignUpActivity"
            android:exported="true" />
        <activity
            android:name=".view.EditProfileActivity"
            android:exported="true" />
        <activity
            android:name=".view.QnaActivity"
            android:exported="true" />
        <activity
            android:name=".view.QnaPostingActivity"
            android:exported="true" />
        <activity
            android:name=".view.StudyActivity"
            android:exported="true" />
        <activity
            android:name=".view.StudyManageActivity"
            android:exported="true" />
        <activity
            android:name=".view.QnaViewActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".view.PWFindActivity"
            android:exported="true" />
        <activity
            android:name=".view.MyStudyListActivity"
            android:exported="true" />
        <activity
            android:name=".view.StudyCreateActivity"
            android:exported="true" />
        <activity
            android:name=".view.MyScheduleListActivity"
            android:exported="true" />
    </application>

</manifest>